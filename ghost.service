[Unit]
Description=Ghost
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill ghost
ExecStartPre=-/usr/bin/docker rm ghost
ExecStartPre=/usr/bin/docker pull dockerfile/ghost
ExecStart=/usr/bin/docker run -p 2368 -v /home/core/container/ghost:/ghost-override -e VIRTUAL_HOST=ghost.mckendrick.io dockerfile/ghost 
ExecStop=/usr/bin/docker stop ghost

[Install]
WantedBy=multi-user.target